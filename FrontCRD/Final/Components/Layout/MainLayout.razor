@inherits LayoutComponentBase
@inject NavigationManager Navigation

<meta charset="utf-8" />
<div class="page">

    <NavMenu /> 

    <div class="container-temporario"> 
        <button class="botao-login-temporario" title="Logins temporários" @onclick="irParaloginsTemporarios" type="button">
            <i class="fas fa-user-clock"></i>
        </button>
    </div> 
    
    <main>

        <article class="content px-4">
            <div style="align-self:center; align-items:center;" class="Logo-branca-home">
                <img src="/Imagens/LogoSenaiBranco..png" />
            </div>
            @Body
            
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private void irParaloginsTemporarios()
    {
        Navigation.NavigateTo("/LoginTemporario");
        //Para recarregar a pagina
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}